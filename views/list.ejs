<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box"> 
  <% for(let i = 0; i < newListItem.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newListItem[i] %></>
  </div>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="What to do" autofocus="true" autocomplete="false" />
    <button type="submit" name="list" value=<%= listTitle %> >+</button>
  </form>
</div>

<%- include('footer') -%>